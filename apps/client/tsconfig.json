{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "vite/client"],
    "paths": { "@alpha/contracts": ["../../packages/contracts/src/index.ts"] },
    "outDir": "dist"
  },
  "include": ["src"]
}
